{
  "name": "@projectfe/core-db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean:cache": "git clean -xdf .cache .turbo dist",
    "clean": "pnpm run clean:cache && git clean -xdf node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "migrate": "pnpm with-env drizzle-kit migrate",
    "generate": "pnpm with-env drizzle-kit generate",
    "check": "pnpm with-env drizzle-kit check",
    "drizzleup": "pnpm with-env drizzle-kit up",
    "push": "pnpm with-env drizzle-kit push",
    "pull": "pnpm with-env drizzle-kit pull",
    "export": "pnpm with-env drizzle-kit export",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@types/pg": "catalog:drizzle0.44",
    "drizzle-orm": "catalog:drizzle0.44",
    "drizzle-zod": "catalog:drizzle0.44",
    "pg": "catalog:drizzle0.44",
    "zod": "catalog:zod4"
  },
  "devDependencies": {
    "@projectfe/eslint-config": "workspace:*",
    "@projectfe/prettier-config": "workspace:*",
    "@projectfe/tsconfig": "workspace:*",
    "drizzle-kit": "catalog:drizzle0.44",
    "eslint": "catalog:eslint9",
    "prettier": "catalog:prettier3",
    "typescript": "catalog:typescript5"
  },
  "prettier": "@projectfe/prettier-config"
}
