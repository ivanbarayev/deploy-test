{
  "name": "@projectfe/payments",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "default": "./src/providers/index.ts"
    },
    "./providers/nowpayments": {
      "types": "./dist/providers/nowpayments/index.d.ts",
      "default": "./src/providers/nowpayments/index.ts"
    },
    "./providers/paypal": {
      "types": "./dist/providers/paypal/index.d.ts",
      "default": "./src/providers/paypal/index.ts"
    },
    "./service": {
      "types": "./dist/service.d.ts",
      "default": "./src/service.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean:cache": "git clean -xdf .cache .turbo dist",
    "clean": "pnpm run clean:cache && git clean -xdf node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@projectfe/core-db": "workspace:*",
    "drizzle-orm": "catalog:drizzle0.44",
    "zod": "catalog:zod4"
  },
  "devDependencies": {
    "@projectfe/eslint-config": "workspace:*",
    "@projectfe/prettier-config": "workspace:*",
    "@projectfe/tsconfig": "workspace:*",
    "@types/node": "catalog:node24",
    "eslint": "catalog:eslint9",
    "prettier": "catalog:prettier3",
    "typescript": "catalog:typescript5"
  },
  "prettier": "@projectfe/prettier-config"
}
